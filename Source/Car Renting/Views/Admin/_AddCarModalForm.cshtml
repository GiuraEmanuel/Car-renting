@model AddVehicleViewModel

<form id="addCarForm" asp-controller="Admin" asp-action="AddVehicle" method="post" data-ajax="true"
      data-ajax-method="post"
      data-ajax-url="@Url.Action("AddVehicle","Admin")"
      data-ajax-mode="replace"
      data-ajax-update="#addCarForm">
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="Year">Year:</label>
            <input type="number" value="@Model.Year" id="Year" name="Year">
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Manufacturer">Manufacturer:</label>
            <input type="text" value="@Model.Manufacturer" id="Manufacturer" name="Manufacturer">
            <span asp-validation-for="Manufacturer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Model">Model:</label>
            <input type="text" value="@Model.Model" id="Model" name="Model">
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="LicensePlate">License Plate:</label>
            <input type="text" value="@Model.LicensePlate" id="LicensePlate" name="LicensePlate">
            <span asp-validation-for="LicensePlate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="PricePerDay">Price per day:</label>
            <input type="number" value="@Model.PricePerDay" step=".01" id="PricePerDay" name="PricePerDay">
            <span asp-validation-for="PricePerDay" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Save" class="btn btn-primary">
    </div>
</form>
