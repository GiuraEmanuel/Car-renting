@model List<BookingIndexViewModel.BookingInfo>

<table class="table" style="width:80%">
    <thead class="thead-light">
        <tr>
            <th>#</th>
            <th>Email</th>
            <th>Start date</th>
            <th>Days</th>
            <th>Manufacturer</th>
            <th>Model</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
        <tr>
            <td>@booking.Id</td>
            <td>@booking.Email</td>
            <td>@booking.StartDate.ToShortDateString()</td>
            <td>@booking.NumberOfDays</td>
            <td>@booking.Manufacturer</td>
            <td>@booking.Model</td>
            <td>@booking.TotalCost</td>
            <td>
                <a class="btn btn-sm btn-outline-primary" asp-controller="Booking" asp-action="Detail" asp-route-id="@booking.Id">View</a>
            </td>
        </tr>
        }
    </tbody>
</table>
