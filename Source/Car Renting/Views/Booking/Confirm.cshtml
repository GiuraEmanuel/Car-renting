@model BookingConfirmViewModel

@{
    ViewBag.Title = "Confirm Booking";
}

@section Header
{
    <partial name="_Banner" />
}


<div class="row justify-content-center">
    <div class="col-8">
        <div class="container bordered-form">
            <div class="row">
                <div class="col-6">
                    <form asp-controller="Booking" asp-action="Confirm" method="post">
                        <div class="form-group">
                            <label for="CCNumber">Card Number:</label>
                            <input class="form-control" type="text" id="CCNumber" name="CCNumber">
                        </div>
                        <div class="form-group">
                            <label for="ExpirationDate">Expiration Date:</label>
                            <input class="form-control" type="text" id="ExpirationDate" name="ExpirationDate">
                        </div>
                        <div class="form-group">
                            <label for="CCV">CCV:</label>
                            <input class="form-control" type="text" id="CCV" name="CCV">
                        </div>
                        <input name="CarId" type="hidden" value="@Model.CarId">
                        <input name="StartDate" type="hidden" value="@Model.StartDate">
                        <input name="EndDate" type="hidden" value="@Model.EndDate">
                        <input name="TotalCost" type="hidden" value="@Model.TotalCost">
                        <input class="btn btn-success" type="submit" value="Confirm Booking">
                    </form>
                </div>
                <div class="col-6 info-container">
                    <div class="form-group">
                        <h4>@Model.Year @Model.Manufacturer @Model.Model</h4>
                    </div>
                    <div class="form-group">
                        <label>@Model.TotalNumberOfDays Day Rental:</label>
                        <span>From @Model.StartDate.ToShortDateString()</span> to <span>@Model.EndDate.ToShortDateString()</span> <br>
                        <span class="font-italic">Pickup after 9:30AM, due by 9:00AM</span>
                    </div>
                    <div class="form-group">
                        <label>Price Per Day:</label>
                        <span>@Model.PricePerDay.ToString("C")</span>
                    </div>
                    <div class="form-group">
                        <label>Total Price:</label>
                        <span>@Model.TotalCost.ToString("C")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
