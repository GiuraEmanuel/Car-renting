@model BookingConfirmViewModel

@{
    ViewBag.Title = "Confirm booking";
}

<h1>@ViewBag.Title</h1>

<form asp-controller="Booking" asp-action="Confirm" method="post">
    <div class="form-group">
        <label>Model:</label>
        <p>@Model.Model</p>
    </div>
    <div class="form-group">
        <label>Manufacturer:</label>
        <p>@Model.Manufacturer</p>
    </div>
    <div class="form-group">
        <label>Price per day:</label>
        <p>@Model.PricePerDay</p>
    </div>
    <div class="form-group">
        <label>Start Date:</label>
        <p>@Model.StartDate.ToShortDateString() (Pickup after 2PM)</p>
    </div>
    <div class="form-group">
        <label>End Date:</label>
        <p>@Model.EndDate.ToShortDateString() (Due by 12PM)</p>
    </div>
    <div class="form-group">
        <label>Total Number Of Days:</label>
        <p>@Model.TotalNumberOfDays</p>
    </div>
    <div class="form-group">
        <label>Price Per Day:</label>
        <p>@Model.PricePerDay</p>
    </div>
    <div class="form-group">
        <label>Total Price:</label>
        <p>@Model.TotalCost</p>
    </div>

    <div class="form-group">
        <label for="CCNumber">Card Number:</label>
        <input type="text" id="CCNumber" name="CCNumber">
    </div>
    <div class="form-group">
        <label for="ExpirationDate">Expiration Date:</label>
        <input type="text" id="ExpirationDate" name="ExpirationDate">
    </div>
    <div class="form-group">
        <label for="CCV">CCV:</label>
        <input type="text" id="CCV" name="CCV">
    </div>
    <p>Are you sure you want to book this car?</p>
    <input name="TotalCost" type="hidden" value="@Model.TotalCost">
    <input type="submit" value="Confirm Booking" asp-controller="Bookings" asp-action="Confirm">
</form>


